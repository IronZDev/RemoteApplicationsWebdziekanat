{
  "name": "angular-seed",
  "private": true,
  "version": "0.0.0",
  "description": "A starter project for AngularJS",
  "repository": "https://github.com/angular/angular-seed",
  "license": "MIT",
  "dependencies": {
    "angular": "^1.7.5",
    "angular-base64-upload": "^0.1.23",
    "angular-gettext": "^2.4.2",
    "angular-loader": "^1.8.2",
    "angular-route": "^1.8.2",
    "angular-translate": "^2.18.3",
    "flag-icon-css": "^3.5.0",
    "html5-boilerplate": "0.0.1",
    "json-server": "^0.16.3",
    "npm": "^7.1.2",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "angular-gettext-cli": "^1.2.0",
    "angular-mocks": "^1.8.2",
    "cpx": "^1.5.0",
    "http-server": "^0.12.3",
    "jasmine-core": "^3.6.0",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^1.1.2",
    "protractor": "^7.0.0"
  },
  "scripts": {
    "postinstall": "npm run copy-libs",
    "update-deps": "npm update",
    "postupdate-deps": "npm run copy-libs",
    "copy-libs": "cpx \"node_modules/{angular,angular-*,html5-boilerplate/dist}/**/*\" app/lib -C",
    "start-json-server": "npx json-server --watch db.json --port 9000",
    "start": "start http://localhost:8000 & http-server -a localhost -p 8000 -c-1 ./app",
    "start-all": "npm-run-all -p start-json-server start",
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "npm test -- --single-run",
    "preupdate-webdriver": "npm install",
    "//": "Do not install the Firefox driver to work around https://github.com/angular/webdriver-manager/issues/303.",
    "update-webdriver": "webdriver-manager update --gecko false",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js",
    "update-index-async": "node --eval \"var fs=require('fs'),indexFile='app/index-async.html',loaderFile='app/lib/angular-loader/angular-loader.min.js',loaderText=fs.readFileSync(loaderFile,'utf-8').split(/sourceMappingURL=angular-loader.min.js.map/).join('sourceMappingURL=lib/angular-loader/angular-loader.min.js.map'),indexText=fs.readFileSync(indexFile,'utf-8').split(/\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/).join('//@@NG_LOADER_START@@\\n'+loaderText+'    //@@NG_LOADER_END@@');fs.writeFileSync(indexFile,indexText);\"",
    "run-file-serv": "npx json-server --watch db.json --port 9000"
  }
}
